<li class="messages-extra-li"
    id="{{ id }}">
  <div class="alert alert-block alert-{{ message_level }} alert-dismissible"
       role="alert">
    <button type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close">
      <i class="ace-icon fa fa-times"></i>
    </button>
    <span class="message">{{ message }}</span>
  </div>
</li>
